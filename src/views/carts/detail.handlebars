<div class="cart-container">
  <h1>Carrito {{cartId}}</h1>

  {{#if products.length}}
    {{#each products}}
      <div class="cart-item">
        <span>
          {{this.product.title}}
          — ${{this.product.price}}
          ×
          {{this.quantity}}
        </span>
        <!-- botón “Eliminar” en vez de form -->
        <button class="remove-from-cart" data-pid="{{this.product._id}}">
          Eliminar
        </button>
      </div>
    {{/each}}

    <!-- botón “Vaciar carrito” en vez de form -->
    <div style="text-align:right; margin-top:1rem">
      <button id="clear-cart">Vaciar carrito</button>
    </div>
  {{else}}
    <p>El carrito está vacío.</p>
  {{/if}}

  <div class="cart-actions">
    <a href="/view/realtimeproducts">Productos en tiempo real</a>
    <a href="/view/products">Volver al listado</a>
  </div>
</div>
